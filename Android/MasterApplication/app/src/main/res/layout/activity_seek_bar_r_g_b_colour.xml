<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeekBarRGBColour">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_margin"
        android:text="Use the Seek bars to Change the Color"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivColor"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_margin="@dimen/default_margin"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDcrRed"
            android:layout_width="@dimen/seek_bar_button_size"
            android:layout_height="wrap_content"
            android:text="@string/dcr_button" />

        <SeekBar
            android:id="@+id/sbRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:max="255" />

        <Button
            android:id="@+id/btnIncRed"
            android:layout_width="@dimen/seek_bar_button_size"
            android:layout_height="wrap_content"
            android:text="@string/icr_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDcrGreen"
            android:layout_width="@dimen/seek_bar_button_size"
            android:layout_height="wrap_content"
            android:text="@string/dcr_button" />

        <SeekBar
            android:id="@+id/sbGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:max="255" />

        <Button
            android:id="@+id/btnIncGreen"
            android:layout_width="@dimen/seek_bar_button_size"
            android:layout_height="wrap_content"
            android:text="@string/icr_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDcrBlue"
            android:layout_width="@dimen/seek_bar_button_size"
            android:layout_height="wrap_content"
            android:text="@string/dcr_button" />

        <SeekBar
            android:id="@+id/sbBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:max="255" />

        <Button
            android:id="@+id/btnIncBlue"
            android:layout_width="@dimen/seek_bar_button_size"
            android:layout_height="wrap_content"
            android:text="@string/icr_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:text="RESET" />

        <Button
            android:id="@+id/btnShowColorCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:text="Show Color Code" />
    </LinearLayout>

</LinearLayout>